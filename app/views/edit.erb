<h3>Edit Survey</h3>

<form id="survey_form" action="/sessions/<%= @user.id %>/surveys/<%= @survey.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <label for="title">Title:</label>
  <input type="text" name="title" value="<%= @survey.title %>" />
  <br>
  <br>
  <label for="author">Questions:</label>
  <ol>
    <% @survey.questions.each do |question| %>
    <li data-question-id="<%= question.id %>">
      <input type="text" name="question<%= question.id %>" value="<%= question.question %>" />
      <input type="hidden" name="<%= question.id %>" />
       <input type="hidden" name="<%= @user.id %>" />
       <input type="hidden" name="<%= @survey.id %>" />
      <input type="button" class="deleteQuestion" value="Delete" />
    </li>
    <% end %>
  </ol>
  <br>
  <br>
  <input type="submit" value="Update Entry">

</form>
